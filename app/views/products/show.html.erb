<div class="container">
  <div class="product-detail">
    <div class="detail-header">
      <h1>üì¶ <%= @product.name %></h1>
    </div>
    
    <div class="detail-content">
      <% if @product.main_image.attached? %>
        <div class="product-section">
          <h3>üì∏ Product Image</h3>
          <div class="main-image-container">
            <%= image_tag @product.main_image, class: "main-product-image", alt: @product.name %>
          </div>
        </div>
      <% end %>
      
      <% if @product.gallery_images.attached? %>
        <div class="product-section">
          <h3>üñºÔ∏è Gallery</h3>
          <div class="image-gallery">
            <% @product.gallery_images.each do |image| %>
              <div class="gallery-image-item">
                <%= image_tag image, class: "gallery-image", alt: @product.name %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <% if @product.description.present? %>
        <div class="product-section">
          <h3>üìù Description</h3>
          <div class="rich-text-content">
            <%= @product.description %>
          </div>
        </div>
      <% end %>
      
      <% if @product.specifications.present? %>
        <div class="product-section">
          <h3>üîß Specifications</h3>
          <div class="rich-text-content">
            <%= @product.specifications %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="detail-actions">
      <%= link_to "‚úèÔ∏è Edit Product", edit_product_path(@product), class: "btn btn-primary" %>
      <%= link_to "‚Üê Back to Products", products_path, class: "btn" %>
    </div>
  </div>
</div>