<div class="container">
  <div class="header">
    <h1>📦 Products Catalog</h1>
    <%= link_to "➕ Add New Product", new_product_path, class: "btn btn-primary" %>
  </div>

  <% if @products.any? %>
    <div class="products-grid">
      <% @products.each do |product| %>
        <div class="product-card">
          <% if product.main_image.attached? %>
            <div class="card-image">
              <%= image_tag product.main_image, class: "product-thumbnail", alt: product.name %>
            </div>
          <% else %>
            <div class="card-image-placeholder">
              <span>📦</span>
              <p>No image</p>
            </div>
          <% end %>
          <div class="card-content">
            <h3><%= product.name %></h3>
            <% if product.description.present? %>
              <p class="card-description"><%= truncate(product.description.to_plain_text, length: 100) %></p>
            <% end %>
          </div>
          <div class="card-actions">
            <%= link_to "👁 View", product, class: "btn btn-sm" %>
            <%= link_to "✏️ Edit", edit_product_path(product), class: "btn btn-sm" %>
            <%= link_to "🗑 Delete", product, data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>📭 No products found.</p>
      <p>Start by adding your first product!</p>
    </div>
  <% end %>
</div>
