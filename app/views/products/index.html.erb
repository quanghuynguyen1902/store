<div class="container">
  <div class="header">
    <h1>üì¶ <%= t('products.title') %></h1>
    <%= link_to "‚ûï #{t('products.new_product')}", new_product_path, class: "btn btn-primary" %>
  </div>

  <% if @products.any? %>
    <div class="products-grid">
      <% @products.each do |product| %>
        <div class="product-card">
          <% if product.main_image.attached? %>
            <div class="card-image">
              <%= image_tag product.main_image, class: "product-thumbnail", alt: product.name %>
            </div>
          <% else %>
            <div class="card-image-placeholder">
              <span>üì¶</span>
              <p><%= t('products.show.no_image') %></p>
            </div>
          <% end %>
          <div class="card-content">
            <h3><%= product.name %></h3>
            <div class="stock-indicator">
              <% if product.in_stock? %>
                <span class="stock-available">‚úÖ <%= t('stock.in_stock', count: product.stock_quantity) %></span>
              <% else %>
                <span class="stock-unavailable">‚ùå <%= t('stock.out_of_stock') %></span>
              <% end %>
            </div>
            <% if product.description.present? %>
              <p class="card-description"><%= truncate(product.description.to_plain_text, length: 100) %></p>
            <% end %>
          </div>
          <div class="card-actions">
            <%= link_to "üëÅ #{t('products.view_product')}", product, class: "btn btn-sm" %>
            <%= link_to "‚úèÔ∏è #{t('products.edit')}", edit_product_path(product), class: "btn btn-sm" %>
            <%= link_to "üóë #{t('products.delete')}", product, data: { "turbo-method": :delete, "turbo-confirm": t('products.delete_confirm') }, class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>üì≠ <%= t('products.no_products') %></p>
      <p><%= t('products.first_product') %></p>
    </div>
  <% end %>
</div>
