<div class="container">
  <div class="form-container">
    <h1>‚ú® New Product</h1>

    <%= form_with(model: @product, local: true) do |form| %>
      <% if @product.errors.any? %>
        <div class="error-box">
          <h3>‚ö†Ô∏è <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, "Product Name" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter product name" %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Product Description" %>
        <%= form.rich_text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :specifications, "Product Specifications" %>
        <%= form.rich_text_area :specifications, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :main_image, "üì∏ Main Product Image" %>
        <%= form.file_field :main_image, class: "form-control file-input", accept: "image/*" %>
        <small class="form-text">Upload a main product image (JPEG, PNG, GIF, WebP - max 5MB)</small>
      </div>

      <div class="form-group">
        <%= form.label :gallery_images, "üñºÔ∏è Gallery Images" %>
        <%= form.file_field :gallery_images, class: "form-control file-input", accept: "image/*", multiple: true %>
        <small class="form-text">Upload multiple images for product gallery (JPEG, PNG, GIF, WebP - max 5MB each)</small>
      </div>

      <div class="form-actions">
        <%= form.submit "Create Product", class: "btn btn-primary" %>
        <%= link_to "Cancel", products_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>