<div class="container">
  <div class="form-container">
    <h1>‚ú® <%= t('products.new_product') %></h1>

    <%= form_with(model: @product, local: true) do |form| %>
      <% if @product.errors.any? %>
        <div class="error-box">
          <h3>‚ö†Ô∏è <%= pluralize(@product.errors.count, t('errors.required').split.last) %> prohibited this product from being saved:</h3>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, t('products.form.name') %>
        <%= form.text_field :name, class: "form-control", placeholder: t('products.form.name_placeholder') %>
      </div>

      <div class="form-group">
        <%= form.label :description, t('products.form.description') %>
        <%= form.rich_text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :specifications, t('products.form.specifications') %>
        <%= form.rich_text_area :specifications, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :main_image, "üì∏ #{t('products.form.main_image')}" %>
        <%= form.file_field :main_image, class: "form-control file-input", accept: "image/*" %>
        <small class="form-text"><%= t('products.form.main_image_help') %></small>
      </div>

      <div class="form-group">
        <%= form.label :gallery_images, "üñºÔ∏è #{t('products.form.gallery_images')}" %>
        <%= form.file_field :gallery_images, class: "form-control file-input", accept: "image/*", multiple: true %>
        <small class="form-text"><%= t('products.form.gallery_help') %></small>
      </div>

      <div class="form-actions">
        <%= form.submit t('products.form.create'), class: "btn btn-primary" %>
        <%= link_to t('products.form.cancel'), products_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>